<style>

	table {
	    border-collapse: collapse;
	    margin-top: 20px;
	}

	th {
		background-color: #999;
	}

	td, th {
	    border: 1px solid black;
	    text-align: center;
	    padding: 10px;
	}

</style>

<h1>My Robots</h1>

<a href="/robots/new">
	<button>Create New Robot</button>
</a>

<table>
  <tr>
    <th>Name</th>
    <th>City</th>
    <th>State</th>
    <th>Department</th>
    <th>Actions</th>
  </tr>
	<% @robots.each do |robot| %>
	  <tr>
	    <td><%= robot.name %></td>
	    <td><%= robot.city %></td>
	    <td><%= robot.state %></td>
	    <td><%= robot.department %></td>
	    <td>
	    	<!-- forms go here -->
	    	<form action="/robots/<%= robot.id %>" method="get">
				<input type="submit" name="Details" value="Details">
			</form>
	    </td>
	  </tr>
	<% end %>
</table>

